{
    "compilerOptions": {
        "target": "es6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true,
        "outDir": "./build",
        "baseUrl": "./",
        "rootDir": "./",
        "paths": {
            "*": [
                "node_modules/*",
                "src/@types/*"
            ]}
    },
    "include": [
        "src/**/*"
    ]
}